<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:padding="8dp">
    <TextView
        android:text="Tijd"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:gravity="center_horizontal" />
    <TextView
        android:text="@string/timer_state_value"
        android:layout_height="30dp"
        android:id="@+id/textViewTimerStateValue"
        android:layout_alignParentRight="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_width="match_parent"
        android:gravity="center" />
    <Toolbar
        android:minHeight="1px"
        android:background="?android:attr/colorPrimary"
        android:minWidth="1px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar2" />
    <TextView
        android:text="Sensor waarden"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:gravity="center_horizontal" />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout1"
        android:columnCount="2"
        android:rowCount="2"
        android:useDefaultMargins="true">
        <TextView
            android:text="@string/sensor_text"
            android:id="@+id/textViewSensor"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:text="@string/sensor_value"
            android:id="@+id/textViewSensorValue"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="right"
            android:layout_marginRight="190dp" />
        <TextView
            android:text="@string/Sensor2_text"
            android:id="@+id/textViewDebug"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:text="@string/Sensor2_value"
            android:id="@+id/textViewSensorValue2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="right"
            android:layout_marginRight="190dp" />
    </GridLayout>
    <Toolbar
        android:minHeight="1px"
        android:background="?android:attr/colorPrimary"
        android:minWidth="1px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar1" />
    <TextView
        android:text="Stopcontacten"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="20px"
        android:layout_marginBottom="10px" />
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout2"
        android:columnCount="1"
        android:rowCount="2"
        android:layout_gravity="center_horizontal">
        <TextView
            android:text="@string/schk1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView1"
            android:layout_gravity="center" />
        <Button
            android:text="LOADING"
            android:id="@+id/toggleButton0"
            android:layout_gravity="center" />
    </GridLayout>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout3"
        android:columnCount="1"
        android:rowCount="2"
        android:layout_gravity="center_horizontal">
        <TextView
            android:text="@string/schk2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView2"
            android:layout_gravity="center"
            android:layout_marginBottom="-20dp"
            android:layout_marginTop="5dp" />
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/kloktijd"
            android:layout_gravity="center" />
        <GridLayout
            android:id="@+id/gridLayout5"
            android:rowCount="2"
            android:columnCount="2">
            <Button
                android:text="Set Time"
                android:id="@+id/toggleButton1"
                android:layout_gravity="center" />
            <Button
                android:text="  Cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnCancel"
                android:layout_gravity="center" />
        </GridLayout>
        <TextView
            android:text="Gekozen tijd"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView5"
            android:gravity="center_horizontal"
            android:foregroundGravity="center"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp" />
    </GridLayout>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout4"
        android:rowCount="4"
        android:columnCount="1"
        android:layout_gravity="center_horizontal">
        <TextView
            android:text="@string/schk3"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView3"
            android:layout_gravity="center" />
        <Button
            android:text="Smart"
            android:id="@+id/toggleButton2"
            android:layout_gravity="center" />
    </GridLayout>
</LinearLayout>